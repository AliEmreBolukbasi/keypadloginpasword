#include <main.h>
#define LCD_ENABLE_PIN PIN_B0
#define LCD_RS_PIN PIN_B1
#define LCD_RW_PIN PIN_B2
#define LCD_DATA4 PIN_B4
#define LCD_DATA5 PIN_B5
#define LCD_DATA6 PIN_B6
#define LCD_DATA7 PIN_B7

#include <lcd.c>

int tus;

 int keypad(){
     tus=12;
     delay_ms(50); 
     output_high(pin_d0);
     if(input(pin_d4)){
     delay_ms(50);
     tus=3;
     }
     if(input(pin_d5)){
     delay_ms(50);
     tus=6;
     }
     if(input(pin_d6)){
     delay_ms(50);
     tus=9;
     }
     if(input(pin_d7)){
     delay_ms(50);
     tus=10;
     }
     output_low(pin_d0);
      
     delay_ms(50);
     output_high(pin_d1);
     if(input(pin_d4)){
     delay_ms(50);
     tus=2;
     }
     if(input(pin_d5)){
     delay_ms(50);
     tus=5;
     }
     if(input(pin_d6)){
     delay_ms(50);
     tus=8;
     }
     if(input(pin_d7)){
     delay_ms(50);
     tus=0;
     }
      output_low(pin_d1);
      delay_ms(50);

     output_high(pin_d2);
     
     if(input(pin_d4)){
     delay_ms(50);
     tus=1;
     }
     if(input(pin_d5)){
     delay_ms(20);
     tus=4;
     }
     if(input(pin_d6)){
     delay_ms(50);
     tus=7;
     }
     if(input(pin_d7)){
     delay_ms(50);
     tus=11;
     }
     output_low(pin_d2);
     delay_ms(50);
   
   return tus;  
   }
void main()
{  
   lcd_init();  
   set_tris_d(0x0f);
   int sifre[8]={1,2,3,4,5,6,7,8};
   int donentus,sifrebyt=8,sayac=0,girilensayi=0; 
   printf(lcd_putc,"sifre girin yada\n");
   printf(lcd_putc,"sifre degis \"*\"");
   while(TRUE)
   { 
   donentus=keypad();                              
  
   if(donentus!=11 && donentus!=12){                //en baþta þifre girmek için
      printf(lcd_putc,"\f");
      printf(lcd_putc,"sifreyi girin\n");
      while(donentus!=10){                         //þifre kontrolü
         if(girilensayi<8 && donentus!=11){
            if(donentus!=12 && sifre[girilensayi]==donentus ){
               sayac++;
            }
            if(donentus!=12){
            girilensayi++;
            printf(lcd_putc,"*");
            }           
         }
         delay_ms(100);
         donentus=keypad();
      }
      if(sayac==sifrebyt){
         girilensayi=0;
         output_high(pin_c0);
         printf(lcd_putc,"\f");
         printf(lcd_putc,"sifre doðru\n");
      }
      
   }
   if(donentus==11){                         //þifre deðiþtirmek için þifre girin
      if(pin_c0!=1){
      printf(lcd_putc,"\f");
      printf(lcd_putc,"sifreyi girin\n");
      donentus=12;
      while(donentus==12){
         donentus=keypad();
      } 
      while(donentus!=10){          //þifre kontrolü
         if(girilensayi<8 && donentus!=11){
            if(donentus!=12 && sifre[girilensayi]==donentus ){
               sayac++;
            }
            if(donentus!=12){
            girilensayi++;
            printf(lcd_putc,"*");
            }           
         }
         delay_ms(100);
         donentus=keypad();
      }
      }
      if(sayac==sifrebyt){
         output_high(pin_c0);
         printf(lcd_putc,"\f");
         printf(lcd_putc,"yeni sifreyi girin\n");
         donentus=12;girilensayi=0;
         while(donentus==12){
         donentus=keypad();
         } 
         while(donentus!=10){
            if(girilensayi<8 && donentus!=11){
            if(donentus!=12){
               sifre[girilensayi]=donentus;
               girilensayi++;
               printf(lcd_putc,"%d",donentus);
            }       
         }
         delay_ms(100);
         donentus=keypad();
         }
         printf(lcd_putc,"\f");
         printf(lcd_putc,"sifre degisti\n");
         printf(lcd_putc,"yeniden giriniz\n");
         delay_ms(700);
         output_low(pin_c0);
         printf(lcd_putc,"\f");
         printf(lcd_putc,"sifreyi girin\n");
      }
   }
   
   }

}
